   {{>user-header}}
   <div class="container d-flex justify-content-center align-items-center mt-5">
      <div class="card text-center">
        <div class="card-header p-5">
          <h5 class="mb-2">OTP VERIFICATION</h5>
          <div>
            <small>code has been send to your phone</small>
          </div>
        </div>
        <form id="otp" action="/otp" method="post" name="otpForm"> 
        <div class="input-container d-sm-flex flex-row justify-content-center mt-2">
          <input type="text" class="m-1 text-center form-control rounded" name="otp" >
        </div>
        <div>
          <small>
          didn't get the otp
          <a href="'http://localhost:4000/otp/resend'" onclick="resendOtp()" class="text-decoration-none" >Resend</a>
          </small>
        </div>
        <div class="error" style="color:#ff0000">{{messages}}</div>
        <div class="mt-3 mb-5">
          <button class="btn btn-success px-4 verify-btn">verify</button>
        </div>
        </form>
      </div>
    </div>