  <section class="h-100 gradient-custom">
    <div class="container py-5">
      <div class="row d-flex justify-content-center my-4">
        <div class="col-md-8">
                    {{#if message}}
                   <div id="errormessagecart" style="display: none;"><p style="color: red;">{{message}}</p></div>
                    {{/if}}
          <div class="card cart-items-container mb-4">
            <div>
              <h5>Cart</h5>
            </div>
            {{#if prod}}
            {{#each prod}}
            <div class="card-header py-3">
              <h5 class="mb-0"></h5>
            </div>
            
            <div class="card-body">
              <!-- Single item -->
              <div class="row">
                <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                  <!-- Image -->
                  <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                    <img src="{{proId.images.[0]}}" class="w-100" alt="###" />
                    <a href="#!">
                      <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                    </a>
                  </div>
                  <!-- Image -->
                </div>
  
                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                  <!-- Data -->
                  <p><strong>{{proId.name}}</strong></p>
                  <p>{{proId.price}}</p>
                  <p>{{proId.size}}</p>
                  <button type="button" class="btn btn-primary btn-sm me-1 mb-2 delete-btn" data-mdb-toggle="tooltip"
                    title="Remove item" data-url="{{proId._id}}">Remove
                    <i class="fa fa-trash"></i>
                  </button>
                </div>
  
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                  <!-- Quantity -->
                  <div class="d-flex mb-4" style="max-width: 300px">
                    <button class="btn btn-primary px-3 ms-2 quantity-down" data-url="{{proId._id}}">
                      <i class="fa fa-minus"></i>
                    </button>

                    <div class="form-outline">
                      <input id="form1" min='0' name="quantity" id="Productquantity" value="{{quantity}}" type="number"  class="form-control" />
                      <label class="form-label" for="form1">{{TotProPrice}}</label>
                    </div>
                    <button class="btn btn-primary px-3 me-2 quantity-up" data-url="{{proId._id}}">
                      <i class="fa fa-plus"></i>
                    </button>

                  </div>
                  <!-- Quantity -->
  
                  <!-- Price -->
                  <p class="text-start text-md-center">
                    <strong>₹{{proId.price}}</strong>
                  </p>
                  <!-- Price -->
                </div>
              </div>
              <!-- Single item -->
              <hr class="my-4" />   
            </div>
           {{/each}} 

          {{else}}
          <div>
            <lottie-player src="https://assets3.lottiefiles.com/packages/lf20_dkc8tvbm.json"  background="transparent"  speed="0.5"  style="width: 600px; height: 450px;"  loop autoplay></lottie-player>
          </div>
          {{/if}}
          </div>
          
          <div class="card mb-4 mb-lg-0">
            <div class="card-body">
              <p><strong>We accept</strong></p>
              <img class="me-2" width="45px"
                src="https://uploads-ssl.webflow.com/60072f00f7a178f0b2c7fa0c/6038aae3530f4adac106f555_1896px-Razorpay_logo.svg-p-1080.png"
                alt="Razorpay" />
              <img class="me-2" width="45px"
                src="https://th.bing.com/th/id/OIP.xgPnXnivbGI13VC1Lv76AwHaEK?pid=ImgDet&rs=1"
                alt="PayPal" />
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-header py-3">
              <h5 class="mb-0">Summary</h5>
            </div>
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <li
                  class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                  Products 
                  <span>{{totQuant}}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                  Shipping
                  <span>Free</span>
                </li>
                <li
                  class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                  <div>
                    <strong>Total amount</strong>
                    <strong>
                      <p class="mb-0">(including GST)</p>
                    </strong>
                  </div>
                  <span><strong class="total_amount">₹{{totPrice}}</strong></span>
                </li>
              </ul>
  
              <a type="button" href="/order" class="btn btn-primary btn-lg btn-block">Go to checkout
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


