{{>admin-navbar}}

<main style="margin-top: 58px">
    <div class="container pt-4">

    {{#if cat}}
     <form action="/admin/apply-Catoffer/{{cat.[0]._id}}" method="post" >
    <div class="card col-md-6">

    <div class="form-group mx-3">  

        <label>Category Name</label>  
        <input type="hidden" name="catId" value="{{_id}}">
        <input type="text" name="name" class="form-control" value="{{cat.[0].name}}" placeholder="{{cat.[0].name}}">  

    </div>  

    <div class="form-group mx-3">  

        <label>Offer</label>  

        <input type="number" name="offer" class="form-control" placeholder="Enter offer percentage">  

    </div> 
    </div> 

    <button type="submit" class="btn btn-primary m-4">Submit</button>  

</form>
{{/if}}




    </div>
</main>