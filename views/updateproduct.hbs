{{>admin-navbar }}

<main style="margin-top: 58px">
    <div class="container pt-4">
        <form  name="editProduct" id="editProduct" class="form-horizontal mb-5" enctype="multipart/form-data">

                <fieldset>
                    <!-- Form Name -->
                    <h1>Edit Product</h1>
                    <!-- Text input-->
                    <div class="form-group row mt-1">
                        <label class="col-md-4 control-label"  for="product_name" >PRODUCT NAME</label>
                        <div class="col-md-4">
                            <input id="product_name" name="product_name" value="{{prodData.name}}" class="form-control input-md" required type="text"></div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group row mt-1">
                            <label class="col-md-4 control-label" for="category">CATEGORY NAME</label>
                            <div class="col-md-4">
                                <select class="form-select" name="category">
                                    <option value="value" value="{{_id}}" id="category" selected>{{ prodData.category.name }}</option>
                                    {{#each Category}}
                                        <option class="text-success" required >{{name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <!-- Text input-->
                        <div class="form-group row mt-1">
                            <label class="col-md-4 control-label" for="highlisghts">HIGHLIGHTS</label>
                            <div class="col-md-4">
                                <input id="highlights" value="{{ prodData.highlights }}" name="highlights" placeholder="Product Feature" class="form-control input-md" type="text" required></div>
                            </div>
                            <!-- Text input-->
                            <div class="form-group row mt-1">
                                <label class="col-md-4 control-label" for="price">PRICE</label>
                                <div class="col-md-4">
                                    <input id="price" name="price" value="{{ prodData.price }}" placeholder="PRODUCR PRICE" class="form-control input-md" required type="text"></div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group row mt-1">
                                    <label class="col-md-4 control-label" for="product_size">PRODUCT SIZE</label>
                                    <div class="col-md-4">
                                        <input id="product_size" value="{{ prodData.size }}" name="product_size" placeholder="PRODUCT SIZE" class="form-control input-md" type="text" required></div>
                                    </div>


                                    <!-- Text input-->
                                    <div class="form-group row mt-1">
                                        <label class="col-md-4 control-label" for="available_quantity">INVENTORY</label>
                                        <div class="col-md-4">
                                            <input id="inventory" value="{{ prodData.inventory }}" name="inventory" placeholder="INVENTORY" class="form-control input-md" required type="text"></div>
                                        </div>


                                        <!-- Textarea -->
                                        <div class="form-group row mt-1">
                                            <label class="col-md-4 control-label" for="product_description">PRODUCT DESCRIPTION</label>
                                            <div class="col-md-4">
                                                <textarea value="{{prodData.description}}" class="form-control" id="product_description" name="description">{{ prodData.description }}</textarea>
                                            </div>
                                        </div>


                                        <!-- Text input-->
                                        <div class="form-group container">
                                            <div
                                                class="col-md-4 row">

                                                <!-- File Button -->
                                                        {{#each objects}}
                                                <div class="d-flex justify-content-center form-group row mt-2 image-class">
                                                    
                                                    <label class="col-md-4 control-label" for="filebutton">main_image</label>
                                                    
                                                    <div class="container row md-4 ">
                                                        <input multiple type="file" id="file" name="file" value="/{{this.image}}" class="input-file" value="invisible">
                                                        </div>     
                                                            <div class="card" style="width: 12rem;">
                                                                <img class="card-img-top"  src="/{{this.image}}" value="/{{this.image}}" alt="Card image cap">
                                                                </div>
                                                        </div>
                                                        {{/each}}
                                                        <!-- File Button -->

                                                    </fieldset>
                                                    <!-- Button -->
                                                    <div class="form-group text-center mt-3">
                                                        <div class="col-md-4">
                                                            <button type="button"  id="singlebutton" name="singlebutton" class="btn btn-primary Update-prod" data-url={{prodData._id}}>Update</button>
                                                            <div class="error" style="color: red;">{{errMessage}}</div>

                                                        </div>
                                                    </div>

                                            </form>

                                        </div>
                                    </main>
