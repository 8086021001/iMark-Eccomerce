{{>admin-navbar}}
<main style="margin-top: 58px">
            <div class="container pt-4"> 
               <table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Name</th>
      <th>phone</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody id="userData" >
    {{#each user}}
    <tr>
      <td>
        <div class="d-flex align-items-center">
          <div class="ms-3">
            <p class="fw-bold mb-1">{{firstName}} {{lastName}}</p>
          </div>
        </div>
      </td>
      <td>
        <p class="fw-normal mb-1">{{phone}}</p>
      </td>
      <td>
        <p class="fw-normal mb-1">{{email}}</p>
      </td>
      <td>
        {{#if Action}}
<button class="btn block btn-success px-5 " id="block" data-url={{_id}}>Block</button>
        {{else}}
<button class="btn block btn-danger px-4 " id="block" data-url={{_id}}>Unblock</button>
        {{/if}}
      </td>
    </tr>
 {{/each}}
  </tbody>
</table> 

 </div>
</main>